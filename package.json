    "db:health": "cd db && node migrate.js health",
    "db:reset": "cd db && node migrate.js reset"
  },
  "dependencies": {
    "@libsql/client": "latest",
    "bech32": "^2.0.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nostr",
    "indexer",
    "turso",
    "database",
    "api",
    "vercel"
  ],
