{
  "name": "nostr-indexer-api",
  "version": "1.0.0",
  "description": "NOSTR Indexer API with Turso DB integration",
  "private": true,
  "scripts": {
    "build": "echo \"No build step\"",
    "db:migrate": "node db/migrate.js",
    "db:stats": "node db/migrate.js stats",
    "db:health": "node db/migrate.js health",
    "db:reset": "node db/migrate.js reset",
    "index:backfill:turso": "node scripts/indexer-backfill-turso.js",
    "index:backfill:turso:profiles": "node scripts/indexer-backfill-turso.js --only=profiles",
    "index:backfill:turso:contacts": "node scripts/indexer-backfill-turso.js --only=contacts",
    "index:backfill:sqlite": "node scripts/indexer-backfill-sqlite.js",
    "index:backfill:sqlite:profiles": "node scripts/indexer-backfill-sqlite.js --only=profiles",
    "index:backfill:sqlite:contacts": "node scripts/indexer-backfill-sqlite.js --only=contacts",
    "index:enhanced:sqlite": "node scripts/indexer-enhanced-sqlite.js",
    "index:enhanced:sqlite:profiles": "node scripts/indexer-enhanced-sqlite.js --only=profiles",
    "index:enhanced:sqlite:contacts": "node scripts/indexer-enhanced-sqlite.js --only=contacts",
    "dev:api": "node scripts/dev-api-server.js",
    "sqlite:stats": "node scripts/sqlite-check-stats.js",
    "sqlite:migrate:enhanced": "node scripts/sqlite-migrate-enhanced.js",
    "sqlite:test:enhanced": "node scripts/sqlite-test-enhanced.js",
    "indexer:push:trending": "node scripts/indexer-push-trending.js",
    "indexer:push:all": "node scripts/indexer-push-all.js",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "electron": "electron ./electron/main.js"
  },
  "dependencies": {
    "@libsql/client": "latest",
    "bech32": "^1.1.4",
    "express": "^5.1.0",
    "nostr-tools": "^2.7.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "electron": "^31.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nostr",
    "indexer",
    "turso",
    "database",
    "api",
    "vercel"
  ],
  "author": "NOSTR Indexer Team",
  "license": "MIT"
}
