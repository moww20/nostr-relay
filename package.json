{
  "name": "nostr-indexer-api",
  "version": "1.0.0",
  "description": "NOSTR Indexer API with Turso DB integration",
  "private": true,
  "scripts": {
    "build": "echo \"No build step\"",
    "db:migrate": "node db/migrate.js",
    "db:stats": "node db/migrate.js stats",
    "db:health": "node db/migrate.js health",
    "db:reset": "node db/migrate.js reset",
    "index:local": "node scripts/local-index.js",
    "index:profiles": "node scripts/local-index.js --only=profiles",
    "index:contacts": "node scripts/local-index.js --only=contacts"
  },
  "dependencies": {
    "@libsql/client": "latest",
    "bech32": "^2.0.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nostr",
    "indexer",
    "turso",
    "database",
    "api",
    "vercel"
  ],
  "author": "NOSTR Indexer Team",
  "license": "MIT"
}